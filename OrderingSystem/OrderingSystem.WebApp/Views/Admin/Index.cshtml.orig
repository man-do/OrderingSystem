<script>
    $(document).ready(function () {
        $('#Search').bind('input', function () {
            var searchVal = $('#Search').val();
            $.ajax({
                url: "/Admin/SearchUser?search=" + searchVal,
                method: "GET",
                contentType: "application/json",
                success: function (data) {
                    $('#user-template').html(data);
                },
                error: function () {
